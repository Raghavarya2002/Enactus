        <activity
            android:name=".AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FragmentWaterSettings"
            android:screenOrientation="portrait" />
        <activity android:name=".WaterTips" />
        <activity
            android:name=".LoginSignUp.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginSignUp.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".AlertReciever" />
        <receiver android:name=".ResetValueMidnight" />
    </application>

</manifest>